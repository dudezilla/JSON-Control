{
    "source": {
        "include": ["src", "./readme.md"],
        "includePattern": ".js",
        "exclude": [".vscode","node_modules/","docs/","jsdoc/", "package.json", "jsdoc.conf.json"],
        "excludePattern": "(.json)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "template": "docs-template",
        "encoding": "utf8",
        "destination": "public/docs",
        "recurse": true,
        "verbose": true,
        "tutorials": "public/tutorials"
    }
}